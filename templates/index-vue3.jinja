<!doctype html>
<html>
  <head>
    <link rel="stylesheet" href="static/index.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/font-awesome@4.7.0/css/font-awesome.min.css">
    {% if env == 'development' %}
      <script src="https://unpkg.com/vue@3.2.37/dist/vue.global.js"></script>
    {% else %}
      <script src="https://unpkg.com/vue@3.2.37/dist/vue.global.prod.js"></script>
    {% endif %}
    <script src="https://cdn.jsdelivr.net/npm/socket.io-client@2.3.0/dist/socket.io.js"></script>
  </head>

  <body>
    <div id="app">
      <span v-if="connected"> 
        <room :name="name" :players="players" :observers="observers" :finished="finished"/>
      </span>
      <span v-else>
        <input-name @enter="enter"/>
      </span>
    </div>

    <script>
      let socket = io(window.location.origin + '/')

      Vue.createApp({
        components: {
          'InputName': Vue.defineAsyncComponent( () => import('./static/components-vue3/input-name.js')),
          'Room': Vue.defineAsyncComponent( () => import('./static/components-vue3/room.js'))
        },
        data: () => {
          return {
            connected: false,
            name: '',
            players: [],
            observers: [],
            finished: false
          }
        },
        methods: {
          enter: function(name) {
            this.name = name;
            this.connected = true;
          },
          onRoomUpdate: function(room) {
            this.players = room.players
            this.observers = room.observers
            this.finished = room.finished
          }
        },
        created: function() {
          socket.on('room_update', this.onRoomUpdate)
          // when closing the page, we send an event to remove the user
          window.addEventListener('beforeunload', (event) => {
            socket.emit('left', this.name)
          })
        }
      }).mount('#app')
    </script>
  </body>
</html>